<h2>Listing visits</h2>

  <div style="height: 50px">
  </div>




<div style="min-width: 960px; overflow:auto;">
    <table  id="index_table" >
      <thead>
        <tr>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px"><b>Agenda </b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><b>Description </b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 100px "><b>Time </b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><b>Customers </b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><b>Agenda Sheet </b></td>
        </tr>
      </thead>
      
    <% @visits.each do |visit| %>
        <tr>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px"><%= visit.Agenda %></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><%= visit.Description %></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 100px "><%= visit.time %></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><%= visit.customers %></td>

        <%  if visit.attachment.blank? %>
            <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px ">Not Available</td>
        <% else %>
            <td style=" padding-right: 5px; padding-left: 5px; min-width: 150px "><%= link_to(image_tag("Download.png", :border => 0), visit.attachment.url)%></td>
        <% end %>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px "><b><%= link_to 'Show', visit %></b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px "><b><%= link_to 'Edit', edit_visit_path(visit) %></b></td>
          <td style=" padding-right: 5px; padding-left: 5px; min-width: 50px "><b><%= link_to 'Destroy', visit, confirm: 'Are you sure?', method: :delete %></b></td>
        </tr>
        <% end %>
    </table>
  </div>


  <div style="height: 50px">
  </div>

<div class= 'btn btn-info'>
<font size="3" color=#FFFFFF>
<%= link_to 'New Visit', new_visit_path, :style => 'text-decoration: none'  %>
</font>
</div>
